mixin puddingsList()
    ul.puddings__list
        li.puddings__item.info__chocolate
            span.info__puddings__item.flt__right
                header.puddings__cta__header
                    h2.puddings__cta__title#hersey-chocolate Chocolate
                    p.puddings__cta__text The classic HERSHEY’S taste you love. Now in a cup.

                    ul.puddings__cta__nav
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Nutritional Information", "#nutrition-chocolate", newTab)
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Ingredients", "#ingredient-chocolate", newTab)
            span.info__puddings__item.flt__right
                +insertImageTag('img/hersey-chocolate-info.png', 'hersey chocolate pudding', 'first__pudding')
                p.pudding__small__text Chocolate Flavor
        
        li.puddings__item.info__smore
            span.info__puddings__item.flt__left
                header.puddings__cta__header
                    h2.puddings__cta__title#hersey-smore S’mores
                    p.puddings__cta__text Now stting up camp in the pudding aisle.

                    ul.puddings__cta__nav
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Nutritional Information", "#nutrition-smore", newTab)
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Ingredients", "#ingredient-smore", newTab)
            span.info__puddings__item.flt__left
                +insertImageTag('img/hersey-smores-info.png', 'hersey smore pudding', 'second__pudding')
                p.pudding__small__text Artificially Flowered
        
        li.puddings__item.info__chocoberry
            span.info__puddings__item.flt__right
                header.puddings__cta__header
                    h2.puddings__cta__title#hersey-strawberry Chocolate Covered Stawberry
                    p.puddings__cta__text Taking strawberries for a dip in the pudding aisle.

                    ul.puddings__cta__nav
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Nutritional Information", "#nutrition-chocoberry", newTab)
                        li.puddings__cta__items
                            +insertSampleButton("generic__button info__button popup__link", "Ingredients", "#ingredient-chocoberry", newTab)
