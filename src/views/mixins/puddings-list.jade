                    tr.info__section__table__subinfo
                        td.info__section__table__subinfo__text Trans Fat 0g
                        td 
                        td.info__section__table__subinfo__text Sugars 16g
                        td 
                    tr.info__section__table__subinfo
                        td.info__section__table__subinfo__text #[span.popup__serving__bold Cholest] 10mg
                        td.info__section__table__subinfo__text.info__section__table__subinfo__text__center #[span.popup__serving__bold 3%] 
                        td.info__section__table__subinfo__text #[span.popup__serving__bold Protein] 2g
                        td 
                    tr.info__section__table__subinfo__noborder
                        td.info__section__table__subinfo__text #[span.popup__serving__bold Sodium] 160mg
                        td.info__section__table__subinfo__text.info__section__table__subinfo__text__center #[span.popup__serving__bold 7%]
                        td 
                        td 
                    tr.info__section__table__subinfo__end
                        td.info__section__table__subinfo__text__center__bottom Vitamin a 4%
                        td.info__section__table__subinfo__text__center__bottom Vitamin C 0%
                        td.info__section__table__subinfo__text__center__bottom Calcium 4% 
                        td.info__section__table__subinfo__text__center__bottomno Iron 2%
        a.popup__close.generic__button.popup__close__button__color(href="#") 
            span.generic__button__text Okay, got it!
            
