    //- ---------------- POPUP WINDOWS --------------- -//
    
    //- ---------------- POPUP WINDOWS CHOCOLATE --------------- -//
    div.popup__window.popup__size#ingredient-chocolate
        h2.popup__title Ingredients
        p.popup__subtitle HERSHEY’S Chocolate Pudding Cups
        p.popup__ingredients #[span.popup__ingredients__bold FILLING]: SKIM MILK, WATER, SUGAR, CREAM, MODIFIED FOOD STARCH, COCOA PROCESSED WITH ALKALI, CONTAINS LESS THAN 2% OF GELATIN, SALT, SODIUM STEAROYL LACTYLATE (FOR SMOOTH TEXTURE), NATURAL AND ARTIFICIAL FLAVOR, VITAMIN A PALMITATE, VITAMIN D3.
        p.popup__ingredients #[span.popup__ingredients__bold TOPPING]: WATER, SKIM MILK, SUGAR, CREAM, MODIFIED FOOD STARCH, CONTAINS LESS THAN 2% OF GELATIN, ARTIFICIAL COLOR, MILK PROTEIN CONCENTRATE, SALT, SODIUM STEAROYL LACTYLATE, NATURAL AND ARTIFICIAL FLAVOR, VITAMIN A PALMITATE, VITAMIN D3.
        p.popup__ingredients #[span.popup__ingredients__bold CONTAINS]: MILK.
        a.popup__close.generic__button.popup__close__button__color(href="#")
            span.generic__button__text Okay, got it!

    div.popup__window.popup__size#nutrition-chocolate
        h2.popup__title Nutritional Information
        p.popup__subtitle HERSHEY’S Chocolate Pudding Cups
        .popup__info__section  
            span.popup__info__section__serving
                ul.info__section__serving
                    li.popup__serving__info #[span.popup__serving__bold Serving size] 1 snack (93g)
                    li.popup__serving__info #[span.popup__serving__bold Serving] 4
                    li.popup__serving__info #[span.popup__serving__bold Calories] 110
                    li.popup__serving__info Fat Cal 25
                p.info__section__serving__percent Percent Daily Values (DV) are based on a 2,000 calorie diet.
            span.popup__info__section__table
                table.info__section__table
                    tr.info__section__table__header
                        th Amount/Serving
                        th %DV*
                        th Amount/Serving
                        th %DV*
                    tr.info__section__table__subinfo
                        td.info__section__table__subinfo__text #[span.popup__serving__bold Total Fat] 3g
                        td.info__section__table__subinfo__text.info__section__table__subinfo__text__center #[span.popup__serving__bold 5%] 
                        td.info__section__table__subinfo__text #[span.popup__serving__bold Total Carb] 20g
                        td.info__section__table__subinfo__text.info__section__table__subinfo__text__center #[span.popup__serving__bold 7%]
                    tr.info__section__table__subinfo
                        td.info__section__table__subinfo__text Sad Fat 2g
                        td.info__section__table__subinfo__text.info__section__table__subinfo__text__center #[span.popup__serving__bold 10%] 
                        td.info__section__table__subinfo__text Fiber <1g
